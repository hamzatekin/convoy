{
  "name": "convoy",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "playground"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./src/client.ts",
      "default": "./src/client.ts"
    },
    "./react": {
      "types": "./src/react.ts",
      "default": "./src/react.ts"
    },
    "./node": {
      "types": "./src/node.ts",
      "default": "./src/node.ts"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "convoy:dev": "bun run scripts/convoy-dev.ts",
    "convoy:server:debug": "CONVOY_DEBUG=1 bun run --cwd playground convoy:server",
    "playground:dev": "bun run --cwd playground dev",
    "playground:build": "bun run --cwd playground build",
    "playground:preview": "bun run --cwd playground preview",
    "playground:typecheck": "bun run --cwd playground typecheck",
    "playground:convoy:dev": "bun run --cwd playground convoy:dev",
    "playground:convoy:once": "bun run --cwd playground convoy:once",
    "playground:convoy:server": "bun run --cwd playground convoy:server",
    "playground:convoy:server:debug": "CONVOY_DEBUG=1 bun run --cwd playground convoy:server",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.13",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  }
}
