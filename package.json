{
  "name": "convoy",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "playground"
  ],
  "bin": {
    "convoy": "./bin/convoy.js"
  },
  "files": [
    "bin",
    "scripts",
    "src",
    "README.md",
    "ROADMAP.md"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./src/client.ts",
      "default": "./src/client.ts"
    },
    "./react": {
      "types": "./src/react.ts",
      "default": "./src/react.ts"
    },
    "./node": {
      "types": "./src/node.ts",
      "default": "./src/node.ts"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "convoy:dev": "node bin/convoy.js dev",
    "convoy:server:debug": "CONVOY_DEBUG=1 npm --prefix playground run convoy:server",
    "playground:dev": "npm --prefix playground run dev",
    "playground:build": "npm --prefix playground run build",
    "playground:preview": "npm --prefix playground run preview",
    "playground:typecheck": "npm --prefix playground run typecheck",
    "playground:convoy:dev": "npm --prefix playground run convoy:dev",
    "playground:convoy:once": "npm --prefix playground run convoy:once",
    "playground:convoy:server": "npm --prefix playground run convoy:server",
    "playground:convoy:server:debug": "CONVOY_DEBUG=1 npm --prefix playground run convoy:server",
    "prepare": "husky",
    "format": "prettier --write .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "pg": "^8.16.3",
    "tsx": "^4.20.5"
  },
  "peerDependencies": {
    "zod": "^3.23.0 || ^4.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.13",
    "dotenv": "^17.2.3",
    "happy-dom": "^18.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "react": "^19.1.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.16",
    "zod": "^4.2.1"
  }
}
